# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Application
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://fms.yourdomain.com

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=fms_production
DB_USER=fms_user
DB_PASSWORD=change_me_to_secure_password
DB_SYNC=false
DB_LOGGING=false

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_to_secure_redis_password

# JWT
JWT_SECRET=change_me_to_very_long_random_secret_min_32_chars
JWT_REFRESH_SECRET=change_me_to_another_long_random_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI (Optional - for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email (Optional - for email integration)
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret

# Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# API Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=https://fms.yourdomain.com

# Logging
LOG_LEVEL=info

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Backup (Optional)
AWS_S3_BUCKET=your-s3-bucket-for-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000
VITE_WS_URL=ws://localhost:3000

# Application
VITE_APP_NAME=Finance Management System
VITE_APP_VERSION=1.0.0

# OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/callback/google

# Features
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_EMAIL_INTEGRATION=true
VITE_ENABLE_GOOGLE_AUTH=true

# WebSocket Configuration
# Set to 'true' to enable real-time updates via WebSocket (higher cost, instant updates)
# Set to 'false' to use polling only (lower cost, updates every 30 seconds)
# Default: false (recommended for most users to reduce costs)
VITE_ENABLE_WEBSOCKET=false

{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@common/*": ["src/common/*"],
      "@modules/*": ["src/modules/*"],
      "@database/*": ["src/database/*"],
      "@jobs/*": ["src/jobs/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "src/modules/reports/**/*",
    "src/modules/chat/**/*",
    "src/modules/export/**/*",
    "src/modules/gdpr/**/*",
    "src/modules/job-monitor/**/*",
    "src/modules/reconciliation/**/*",
    "src/modules/insights/**/*",
    "src/modules/ai/**/*",
    "src/modules/investments/**/*",
    "src/modules/lend-borrow/**/*",
    "src/modules/budgets/**/*",
    "src/modules/analytics/**/*",
    "src/common/examples/**/*",
    "src/database/migrations/**/*"
  ]
}
